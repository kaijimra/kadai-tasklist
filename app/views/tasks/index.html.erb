<% if logged_in? %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>タスク一覧</h1>

      <ul>
        <% @tasks.each do |task| %>
          <li>
            <%= task.user.name %>
            <%= link_to task.id, task %> :　<%= task.status %> &gt; <%= task.content %>
          </li>
        <% end %>
      </ul>

      <%= link_to '新規タスクの作成', new_task_path %>
    </div>
  </div>
<% end %>